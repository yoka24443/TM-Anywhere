<?xml version="1.0" encoding="UTF-8"?>
<TabHost android:id="@android:id/tabhost" android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<RelativeLayout android:background="@drawable/wb_bg_titlebar"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TabWidget android:id="@android:id/tabs"
				android:background="@drawable/wb_bg_chute" android:fadingEdge="none"
				android:fadingEdgeLength="0.0px" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:layout_marginLeft="50.0dip"
				android:layout_marginRight="50.0dip" android:layout_centerInParent="true" />
		</RelativeLayout>
		<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:id="@+id/dateregion"
				android:textSize="18sp"  android:singleLine="true"
				android:background="#FF303030" android:textColor="#FFF5B800"
				android:gravity="center" android:ellipsize="end" />
		<FrameLayout android:id="@android:id/tabcontent"
			android:layout_width="fill_parent" android:layout_height="fill_parent" />
	</LinearLayout>
	
</TabHost>   


	
