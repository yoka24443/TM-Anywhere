<?xml version="1.0" encoding="utf-8"?>
	<!-- 顶部条 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/LinearLayout01" android:layout_width="fill_parent"
	android:layout_height="47dp" android:background="@drawable/bg_header"
	android:gravity="center_vertical" android:layout_alignParentTop="true">
	<!-- title -->
	<TextView android:id="@+id/title" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_alignParentLeft="true"
		android:layout_marginTop="12dp" android:layout_marginLeft="3.0dip"
		style="@style/logo_button" />
	<!-- 搜索按钮 -->
	<ImageButton android:id="@+id/search" android:background="@null"
		android:src="@drawable/top_search_selector" android:layout_width="wrap_content"
		android:layout_height="fill_parent" android:layout_alignParentRight="true"
		android:paddingRight="10dip" android:paddingLeft="10dip" />
	<!-- 搜索框 -->
	<EditText android:id="@+id/search_edit" android:hint="搜索姓名"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_centerVertical="true" android:layout_toLeftOf="@id/search"
		android:layout_toRightOf="@id/title" android:layout_marginLeft="12dip"
		android:background="@drawable/textfield_search_empty" />
	
</RelativeLayout>
    
