<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.elearning.tm.android.client" android:versionCode="1"
	android:versionName="1.0">
	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:name=".app.TMApplication" android:windowSoftInputMode="adjustResize|stateHidden"
		android:debuggable="true">
		<activity android:name=".StartPage" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<!--欢迎界面StartPage-->
		<activity android:name=".view.FrameActivity"
			android:screenOrientation="portrait" android:configChanges="orientation|keyboardHidden"
			android:launchMode="singleTask">
		</activity>
		<!--整体框架-->
		<activity android:name=".view.LoginActivity"
			android:screenOrientation="portrait" android:configChanges="orientation|keyboardHidden"
			android:launchMode="singleTask">
		</activity>
		<!--任务列表-->
		<activity android:name=".view.TMActivity"
			android:screenOrientation="portrait" android:configChanges="orientation|keyboardHidden"
			android:launchMode="singleTask">
		</activity>
		<!--	新增任务-->
		<activity android:name=".view.TaskAddActivity"
			android:screenOrientation="portrait" android:configChanges="orientation|keyboardHidden"
			android:launchMode="singleTask">
		</activity>
		<!--	修改任务-->
		<activity android:name=".view.TaskEditActivity"
			android:screenOrientation="portrait" android:configChanges="orientation|keyboardHidden"
			android:launchMode="singleTask">
		</activity>

		<!--关于界面-->
		<activity android:name=".view.AboutActivity"
			android:screenOrientation="portrait" android:configChanges="orientation|keyboardHidden"
			android:launchMode="singleTask">
		</activity>
		<!--操作说明-->
		<activity android:name=".view.HelpActivity"
			android:screenOrientation="portrait" android:configChanges="orientation|keyboardHidden"
			android:launchMode="singleTask">
		</activity>
		<!--脱口秀界面-->
		<activity android:name=".view.SaySomeWordsActivity"
			android:screenOrientation="portrait" android:configChanges="orientation|keyboardHidden"
			android:launchMode="singleTask">
		</activity>
		<activity android:name=".view.SearchActivity"
			android:screenOrientation="portrait" android:configChanges="orientation|keyboardHidden"
			android:launchMode="singleTask">
		</activity>
		<!--测试任务列表2-->
		<activity android:name=".view.ContactActivity"
			android:screenOrientation="portrait" android:configChanges="orientation|keyboardHidden"
			android:launchMode="singleTask">
		</activity>
		<!--日历-->
		<activity android:name=".view.module.BaseCalendar"
			android:screenOrientation="portrait" android:configChanges="orientation|keyboardHidden"
			android:launchMode="singleTask">
		</activity>
		<!--更新界面-->
		<activity android:name=".view.UpdateActivity"
			android:screenOrientation="portrait" android:configChanges="orientation|keyboardHidden"
			android:launchMode="singleTask">
		</activity>
		<!--数据同步-->
		<activity android:name=".view.SyncActivity"
			android:screenOrientation="portrait" android:configChanges="orientation|keyboardHidden"
			android:launchMode="singleTask">
		</activity>
		<!--报表结果-->
		<activity android:name=".view.ReportResultActivity"
			android:screenOrientation="portrait" android:configChanges="orientation|keyboardHidden"
			android:launchMode="singleTask">
		</activity>
		<!--明细报表-->
		<activity android:name=".view.report.BalanceActivity"
			android:screenOrientation="portrait" android:configChanges="orientation|keyboardHidden"
			android:launchMode="singleTask">
		</activity>
		<!--饼图报表-->
		<activity android:name=".view.report.ProjectPieReportActivity"
			android:screenOrientation="portrait" android:configChanges="orientation|keyboardHidden"
			android:launchMode="singleTask">
		</activity>
		<!--柱状图报表-->
		<activity android:name=".view.report.TaskBarReportActivity"
			android:screenOrientation="portrait" android:configChanges="orientation|keyboardHidden"
			android:launchMode="singleTask">
		</activity>
	</application>
	<uses-sdk android:minSdkVersion="8" />
	<uses-permission android:name="android.permission.SEND_SMS"></uses-permission>
	<uses-permission android:name="android.permission.CALL_PHONE" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

</manifest> 